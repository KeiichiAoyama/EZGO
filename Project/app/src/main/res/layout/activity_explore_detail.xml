<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ExploreDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/locImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rajaampat" />

                <TextView
                    android:id="@+id/locName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:padding="20dp"
                    android:text="Raja Ampat"
                    android:textColor="@color/white"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginTop="300dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/wrap1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/locCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/locDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem" />

                    <ImageView
                        android:layout_width="360dp"
                        android:layout_height="0.5dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="20dp"
                        android:background="@drawable/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/btnLike"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom|end"
                            android:background="@drawable/toggle_selector"
                            android:textOff=""
                            android:textOn="" />

                        <TextView
                            android:id="@+id/locLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>
                    <!--Comment-->
                    <!--Add Comment-->
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:elevation="5dp"
        android:paddingHorizontal="10dp">
        <LinearLayout
            android:backgroundTint="@color/blue"
            android:gravity="center"
            android:background="@drawable/round_pesawat"
            android:layout_width="48dp"
            android:layout_height="48dp">
            <ImageButton
                android:id="@+id/backDetailExplore"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/white_arrow_back_24"/>
        </LinearLayout>
        <LinearLayout
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:layout_marginStart="270dp"
            android:background="@drawable/round_pesawat"
            android:layout_width="48dp"
            android:layout_height="48dp">
            <ImageButton
                android:id="@+id/searchDetailExplore"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/round_search_24" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>