<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PaymentActivity">


    <FrameLayout
        android:id="@+id/backPayment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_arrow_back_24"
            android:contentDescription="@string/btn_b" />
    </FrameLayout>

    <TextView
        android:id="@+id/htlName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/fonarto"
        android:text="@string/paymentM"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backPayment" />



    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/htlName">

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_transfer"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnPayment2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_pay"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:gravity="start|center"
            android:padding="10dp"
            android:text="@string/bca"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
            app:drawableStartCompat="@drawable/bca" />

        <TextView
            android:id="@+id/btnPayment3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_pay"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:gravity="start|center"
            android:padding="10dp"
            android:text="@string/mandiri"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
            app:drawableStartCompat="@drawable/mandiri" />

        <TextView
            android:id="@+id/btnPayment4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_pay"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:gravity="start|center"
            android:padding="10dp"
            android:text="@string/bni"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
            app:drawableStartCompat="@drawable/bni" />

        <TextView
            android:id="@+id/btnPayment5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_pay"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:gravity="start|center"
            android:padding="10dp"
            android:text="@string/bri"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
            app:drawableStartCompat="@drawable/bri" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>